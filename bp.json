{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/wp-admin/plugins.php",
	"preferredVersions": {
		"php": "8.0",
		"wp": "latest"
	},
	"phpExtensionBundles": [
		"kitchen-sink"
	],
	"steps": [
		{
			"step": "login",
			"username": "admin",
			"password": "password"
		},
		{
			"step": "activatePlugin",
			"pluginPath": "test-plugin/test-plugin.php"
		},
		{
			"step": "wp-cli",
			"command": "wp post create --post_title='Testing Plugin' --post_content=`cat $(pwd)post-content`"
		}
	]
}
